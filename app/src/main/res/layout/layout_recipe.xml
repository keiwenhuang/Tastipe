<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="270dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="19dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipe_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/athelas_regular"
                    android:text="Recipe Name"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/cooking_time"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/athelas_regular"
                    android:gravity="center_vertical"
                    android:text="cook time"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/servings"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/athelas_regular"

                    android:gravity="center_vertical"
                    android:text="serving"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/athelas_bold"
                        android:background="@color/grey"
                        android:text="Ingredients"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ListView
                        android:id="@+id/list_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tvIngredients" />

                    <TextView
                        android:id="@+id/ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvIngredients"
                        android:fontFamily="@font/athelas_regular"
                        android:text="ingredients ingredients ingredients ingredients ingredients "
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        />

                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/ingredients_list"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@id/tvIngredients" />-->

                    <Button
                        android:layout_width="161dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/button_add_to_cart"
                        android:fontFamily="@font/athelas_bold"
                        android:gravity="center"
                        android:text="Add to grocery cart"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@drawable/button_add_to_cart"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMethods"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/athelas_bold"
                        android:text="Methods"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ListView
                        android:id="@+id/list_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/athelas_regular"
                        android:text="instructions instructions instructions instructions"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/methods_list"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@id/tvMethods" />-->

                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_view_cart"
                android:fontFamily="@font/athelas_bold"
                android:text="View Cart"
                android:textAllCaps="false"
                android:textColor="@drawable/button_view_cart" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>